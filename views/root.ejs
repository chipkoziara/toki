	<body>
		<div class="site-wrapper">

			<div class="site-wrapper-inner">

				<div class="cover-container">

					<div class="masthead clearfix">
						<div class="inner">
							<!-- <h3 class="masthead-brand">Toki</h3> -->
								<ul class="nav masthead-nav">
									<li class="active"><a href="#">Get Toki</a></li>
									<li><a href="mailto:hey@tokibot.com">Contact</a></li>
								</ul>
							</nav>
						</div>
					</div>

					<% if (locals.email) { %>

						<% if (locals.success == 'true') { %>

							<div class="alert alert-success" style="text-shadow: none !important;">
								Awesome! We'll contact you at <%= locals.email %> as soon as we can
							</div>

						<% } else { %>
							<div class="alert alert-warning" style="text-shadow: none !important;">
									Something went wrong. Try again? 
								</div>
						<% } %>

					<% } %>

					<div class="inner cover">
						<h1 class="cover-heading" style="line-height: 44px;">Your team's attention manager<br>in Slack <img src="/assets/images/slack_logo.png" style="height:38px; padding-bottom:7px"/></h1>
						<p class="lead">Toki makes it easy for your team to get the right things done each day</p>

						<form id="invite" method="post" action="/invite" class="invite form-inline">

							<div class="input-group">
								<input class="form-control" type="email" name="email" placeholder="joeguy@example.com" required />
								<span class="input-group-btn">
									<input type="submit" class="btn btn-secondary" value="Get Early Access" />
								</span>
							</div>

						</form>

					</div>

					<div class="mastfoot">
						<div class="inner">
