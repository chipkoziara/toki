<!DOCTYPE html>
<html dir="ltr" lang="en-US">

	<head>

		<% include ../partials/head %>

		<link rel="stylesheet" type="text/css" href="/assets/css/splash.css" />
		<script src="/assets/js/splash.js"></script>

	</head>

	<body>
		<div class="site-wrapper">

			<div class="site-wrapper-inner">

				<div class="cover-container">

					<div class="masthead clearfix">
						<div class="inner">
							<!-- <h3 class="masthead-brand">Toki</h3> -->
								<ul class="nav masthead-nav">
									<li class="active"><a href="#">Get Toki</a></li>
									<li><a href="mailto:hey@tokibot.com">Contact</a></li>
								</ul>
							</nav>
						</div>
					</div>

					<% if (locals.email) { %>

						<% if (locals.success == 'true') { %>

							<div class="alert alert-success" style="text-shadow: none !important;">
								Awesome! We'll contact you at <%= locals.email %> as soon as we can
							</div>

						<% } else { %>
							<div class="alert alert-warning" style="text-shadow: none !important;">
									Something went wrong. Try again? 
								</div>
						<% } %>

					<% } %>

					<div class="inner cover">
						<h1 class="cover-heading" style="line-height: 44px;">Your team's attention manager<br>in Slack <img src="/assets/images/slack_logo.png" id="slack-logo-splash"/></h1>
						<p class="lead">Toki makes it easy for teams to go heads down on work and communicate at the right times each day in Slack</p>

						<form id="invite" method="post" action="/invite" class="invite form-inline">

							<div class="input-group">
								<input class="form-control" type="email" name="email" placeholder="joeguy@example.com" required />
								<span class="input-group-btn">
									<input type="submit" class="btn btn-secondary" value="Get Early Access" />
								</span>
							</div>

						</form>

					</div>

					<div id="react-main-mount">
						
					</div>

					<div class="mastfoot">
						<div class="inner">
							<p>Â© 2016 Toki Inc., All Rights Reserved</p>
					</div>
					</div>

				</div>
			</div>

		</div>

	</body>
</html>


<% var env = locals.env || 'development';
	if (env == "development") { %>
	<center>
		DEV MODE:
		<a href='https://slack.com/oauth/authorize?client_id=<%= process.env.DEV_SLACK_ID %>&redirect_uri=<%= process.env.DEV_SLACK_REDIRECT %>new&scope=bot,commands,channels:history,dnd:write,dnd:read'><img alt="Add to Slack" height="40" width="139" src="/assets/images/add_to_slack.png" /></a>
	</center>

	<center style="margin-top: 25px;">
		<a href="https://slack.com/oauth/authorize?client_id=<%= process.env.DEV_SLACK_ID %>&redirect_uri=<%= process.env.DEV_SLACK_REDIRECT %>login&scope=channels:history,dnd:write,dnd:read"><img alt="Sign in with Slack" height="40" width="172" src="/assets/images/sign_in_with_slack_2.png" /></a>
	</center>

<% } else if (false) { %>
	<!-- this is production, but not ready yet -->
	<center>
		<a href='https://slack.com/oauth/authorize?client_id=<%= process.env.SLACK_ID %>&redirect_uri=<%= process.env.SLACK_REDIRECT %>new&scope=bot,commands,channels:history,dnd:write,dnd:read'><img alt="Add to Slack" height="40" width="139" src="/assets/images/add_to_slack.png" /></a>
	</center>

<% } else if (false) { %>
	<!-- this is Sign In with Slack, which we aren't using right now -->
	<center style="margin-top: 25px;">
		<a href="https://slack.com/oauth/authorize?client_id=<%= process.env.SLACK_ID %>&redirect_uri=<%= process.env.SLACK_REDIRECT %>login&scope=identity.basic,channels:history,dnd:write,dnd:read"><img alt="Sign in with Slack" height="40" width="172" src="/assets/images/sign_in_with_slack_2.png" /></a>
	</center>

<% } %>
